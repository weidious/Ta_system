<% content_for :body do %>
    <h3> All Applications to your courses </h3>
    <table class="table table-hover table-bordered">
      <tr>
        <th>Student</th>
        <th>Course</th>
        <th>Type</th>
        <th>Accept Adjust</th>
        <th>Created At</th>
        <th>Last modified</th>
      </tr>

      <% @applies.each do |apply| %>
          <tr>
            <td><%= apply.student.fullname %></td>
            <!--<td><%#= apply.course.subject %> <%#= apply.course.num %>-<%#= apply.course.section %> <%#= apply.course.title %> </td>-->
            <td><%= apply.course.caption %></td>
            <td><%= apply.appType %></td>
            <td><%= booleanCaption(apply.acceptAdjust) %></td>
            <td><%= apply.created_at %></td>
            <td><%= apply.updated_at %></td>
          </tr>
      <% end %>

    </table>
<% end %>