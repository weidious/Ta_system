<h1>Welcome</h1>
<p class="alert"><%= flash[:error] %></p>
<div class="table-responsive">
  <%= form_tag(controller: "welcome", action: "login", method: "post") do %>
      <table class="table table-bordered">
        <tr>
          <th><%= label_tag(:uin, "UIN:") %></th>
          <td><%= text_field_tag(:uin) %></td>
        </tr>
        <tr>
          <th><%= label_tag(:netID, "netID:") %></th>
          <td><%= text_field_tag(:netID) %></td>
        </tr>
        <tr>
          <th><%= label_tag(:password, "password:") %></th>
          <td><%= password_field_tag(:password) %></td>
        </tr>
        <tr>
          <th><%= label_tag(:q, "User Type:") %></th>
          <td class="required"><%= select_tag(:usertype, options_for_select([ "Student", "Instructor" ], "Student")) %></td>
        </tr>
      </table>
      <p>UIN must be 9 digits. Or everything will be disabled after login.</p>
      <%= submit_tag("Log In") %>
  <% end %>
<%= link_to 'Administrator login', admin_index_path %>
</div>
