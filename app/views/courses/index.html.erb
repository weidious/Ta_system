<div class = "table">
  <p>
    <th>All courses</th>
  </p>
<table>
  <thead>
    <tr>
      <th>Sub</th>
      <th>No.</th>
      <th>Title</th>
      <th>Instructor</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.subject %></td>
      <td><%= course.num %></td>
      <td width="300"><%= course.title %></td>
      <td><%= course.instructor.last_name + ", " + course.instructor.first_name %></td>
      <td><%= link_to 'View&Edit', edit_course_path(course) %></td>
      <td><%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure to delete?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New course', new_course_path %>
</div>