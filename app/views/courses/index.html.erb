<div class = "table">
<table>
  <tr>
    <th>All courses</th>
  </tr>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.subject %></td>
      <td><%= course.num %></td>
      <td><%= course.title %></td>
      <td><%= course.instructor.first_name %></td>
      <td><%= course.instructor.middle_name %></td>
      <td><%= course.instructor.last_name %></td>
      <td><%= link_to 'View&Edit', edit_course_path(course) %></td>
      <td><%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure to delete?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New course', new_course_path %>
</div>